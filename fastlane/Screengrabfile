app_apk_path './cordova/platforms/android/build/outputs/apk/debug/android-debug.apk'
tests_apk_path './cordova/platforms/android/build/outputs/apk/androidTest/debug/android-debug-androidTest.apk'


locales helper.get_languages

# clear all previously generated screenshots in your local output directory before creating new ones
clear_previous_screenshots true

output_directory './fastlane/metadata/android'

skip_open_summary true
clear_previous_screenshots true
